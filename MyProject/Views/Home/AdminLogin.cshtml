
@{
    ViewBag.Title = "AdminLogin";
    Layout = "~/Views/Shared/general.cshtml";
}
<div class="row">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 m-4 p-3 card">
        <form method="post">
            <h4 class="text-center">ADMIN LOGIN</h4>
            <div class="form-group mt-3 ps-2">
                <label>ADMIN ID</label>
                <input type="text" class="form-control" name="adminid" placeholder="Enter Id..." />
            </div>
            <div class="form-group mt-3 ps-2">
                <label>ADMIN PASSWORD</label>
                <input type="password" class="form-control" name="password" placeholder="Enter Password..." />
            </div>
            <input type="submit" class="btn btn-info mt-4 " value="Login Now" />
        </form>
    </div>

</div>

