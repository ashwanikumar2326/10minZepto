<script>

    var i = 0
    function pFun(id) {
        
        var t = document.getElementById("txtcard_" + id)
        i = t.value;
        i++;
        t.value = i;
        //alert(i)
    }
    function mFun(id) {
        var t = document.getElementById("txtcard_" + id)
        i = t.value;
        if (i > 0) {
            i--;
