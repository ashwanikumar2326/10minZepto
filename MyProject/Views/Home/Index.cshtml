<div class="row">
    <div class="col-sm-12 p-3">
        <!--start slider-->
        <div id="carouselExampleRide" class="carousel slide" data-bs-ride="true">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="~/Content/image/G3.jpg"style="max-height:470px;" class="d-block w-100 rounded rounded-3" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/image/G4.jpg"style="max-height:470px;" class="d-block w-100 rounded rounded-3" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/image/G.jpg"style="max-height:470px;" class="d-block w-100 rounded rounded-3" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/image/G1.jpg"style="max-height:470px;" class="d-block w-100 rounded rounded-3" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/image/G5.jpeg"style="max-height:470px;" class="d-block w-100 rounded rounded-3" alt="...">
                </div>
