</div>
@*start category*@
<div class="row py-2">
    @{
        if (ViewBag.category != null)
        {
            foreach (var cat in ViewBag.category.Rows)
            {
                <div class="col-lg col-md-3 col-sm-2 my-1"style="min-height:150px;">
                        <div class="card">
                           <a href="/home/product?cid=@cat[0]"style="text-decoration:none;"> 
                            <img src="~/Content/caticons/@cat[2]" class="card-img-top" height="100px"/>
                            <div class="card-body" style="color:black;">
                                <p class="card-text text-center">@cat[1]</p>

                            </div>
                               </a>
                        </div>
                </div>
            }
        }
    }
</div>
@*end category*@
<div class="text-center fs-3">Today's <b class="text-primary">Deals</b></div>

@*start maximum discount 12 product*@
<div class="row ">
    @{
        if (ViewBag.product1 != null)
        {
            foreach (var p1 in ViewBag.product1.Rows)
            {

                <div class="col-lg-2 col-md-4 col-sm-12 py-2">
                        <div class="card mb-3">
                            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                @p1[11]%
                                <span class="visually-hidden">unread messages</span>
                            </span>
                            <img src="~/Content/productpic/@p1[9]" class="card-img-top "style="height:100px;" />
                            <div class="card-body p-3">
                                <b>@p1[3]</b><br />
                                <small class="text-muted"> @p1[8] </small>
                                <p class="mt-1">
                                    <i class="fa-solid fa-indian-rupee-sign"></i>
                                    <s>@p1[6]/-</s>&emsp;<b>@p1[7]/-</b>
                                </p>
                                <form action=" /home/addtocart" method="post">
                                    <input type="hidden"name="salerate"value="@p1[7]" />
                                    <input type="hidden"name="pid"value="@p1[0]" />
                                    <div class="input-group">
                                        <b class="input-group-text" onclick="mFun(@p1[0])">
                                            <i class="fa-solid fa-minus"></i>
                                        </b>
                                        <input name="quantity" type="text" id="txtcard_@p1[0]" class="form-control text-center fs-5 " value="0" />
                                        <b class="input-group-text" onclick="pFun(@p1[0])">
                                            <i class="fa-solid fa-plus"></i>
                                        </b>
                                    </div>
                                    <input type="submit" value="Add" class="btn bg-mycolor text-light mt-1" />
                                </form>
                            </div>               
                        </div>
                </div>
            }
        }
    }
</div>
