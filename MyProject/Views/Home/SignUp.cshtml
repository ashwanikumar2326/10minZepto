@{
    ViewBag.Title = "SignUp";
    Layout = "~/Views/Shared/general.cshtml";
}
<div class="row p-5 ">
    <div class="col-sm-4 border border-dark mx-auto p-2"style="background: #eeeeee;border-radius:4px;">
        <div class="card-body">
            <form method="post"enctype="multipart/form-data">
            <div class="form-group mt-3">
                Enter Name :<br /><input type="text" name="name" class="form-control" />
            </div>
            <div class="form-group mt-3">
                Email :<br /><input type="email" name="email" class="form-control" />
            </div>
            <div class="form-group mt-3">
                Mobile No :<br /><input type="number" name="mobno" class="form-control" />
            </div>
            <div class="form-group mt-3">
                Password :<br /><input type="password" name="password" class="form-control" />
            </div>
            <div class="form-group mt-3">
                Address :<br /><textarea rows="3" cols="40" name="address" class="form-control"></textarea>
            </div>
            <div class="form-group mt-3">
                Landmark :<br /><input type="text" name="landmark" class="form-control" />
            </div>
            <div class="form-group mt-3">
                Pincode :<br /><input type="number" name="pincode" class="form-control" /><br />
            </div>
            <input type="submit"value="Register Now"class="btn btn-primary " />
                </form>
        </div>
    </div>
</div>