
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/general.cshtml";
}
<div class="row m-3">
    <div class="col-sm-4"></div>
    <div class="col-sm-4 m-4 p-3 card" style="background: #eeeeee;border-radius:4px;">
        <form method="post">
            <div class="text-center"><img src="~/Content/image/user.png"height="100px"width="100px"style="border-radius:50%;" /></div>
            <h4 class="text-center pt-2">User LOGIN</h4>
            <div class="form-group mt-3">
                <label>Email Id:</label>
                <input type="email" class="form-control" name="emailid" placeholder="Enter Email..." />
            </div>
            <div class="form-group mt-3 ">
                <label> PASSWORD</label>
                <input type="password" class="form-control" name="password" placeholder="Enter Password..." />
            </div>
            <input type="submit" class="btn btn-primary  mt-4 " value="Sign In" />
        </form>
    </div>

</div>


