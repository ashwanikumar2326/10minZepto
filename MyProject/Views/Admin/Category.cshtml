<div class="row p-5 ">
    <!--Starting of form card-->
    <div class="col-sm-4 card mx-auto"style="background: #eeeeee; box-shadow: 8px 8px 10px grey; border: 2px solid black; border-radius: 3px; ">
        <div class="card-body" >
            <h4 class="card-titele" style="color:#c6003d;">Add Category</h4>
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="exampleInputEmail">Category Name</label>
                    <input type="text"required name="catname" class="form-control" id="catname" aria-describedby="Category" placeholder="Enter Product Category" />
                </div>
                <div class="form-group mt-3">
                    <label for="exampleInputEmail">Category Icon</label>
                    <input type="file"required name="caticon" class="form-control" id="caticon" aria-describedby="Category"  />
                </div>
                <input class="btn btn-danger mt-3" type="submit" style="background:#c6003d;" value="ADD NOW" />
            </form>
        </div>

    </div>
    <!--Starting of table section-->
    <div class="col-sm-10 ms-5 card text-center mt-5" style="border:3px solid black;">
        <div class="card-body">
            <table class="table table-bordered table-striped" style="border:3px solid black;">
                <thead>
                    <tr>
                        <th class="bg-primary">No.</th>
                        <th class="bg-primary">Category Name</th>
                        <th class="bg-primary">Category Icon</th>
                        <th class="bg-primary">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                            foreach (var row in ViewBag.category.Rows)
                            {
                                <tr>
                                    <td>@row[0]</td>
                                    <td>@row[1]</td>
                                    <td>
                                        <img src="~/Content/caticons/@row[2]" height="50px" width="50px" />
                                    </td>
                                    <td><i class="fa fa-trash text-dark"></i></td>
                                </tr>
                            }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

